<div class="topnav">
	<form action="/dashboard">
    <input type="submit" value="Back to Dashboard">
	</form>
</div>

<% if (session[:is_teacher]) %>

	<div class="mainbox">

		<h2>Teacher Profile</h2>

		<h4>First Name:</h4>
		<h5><%= @teacher.first_name %></h5>
		<h4>Last Name:</h4>
		<h5><%= @teacher.last_name %></h5>
		<h4>Email:</h4>
		<h5><%= @teacher.email %></h5>
		<% if @teacher.is_active == true %>
			<h4>Active?: Yes</h4>
		<% else %>
			<h4>Active?: No</h4>
		<% end %>
		<% if @teacher.is_admin == true %>
			<h4>Admin?: Yes</h4>
		<% else %>
			<h4>Admin?: No</h4>
		<% end %>

		<br>

		<form action="/teachers/<%= @teacher.id %>/edit">
	    <input type="submit" value="Edit Profile">
		</form>

	</div>

<% else %>

	<div class="sorry">
		<h1>Sorry, you are not authorized to view this page.</h1>
	</div>

<% end %>

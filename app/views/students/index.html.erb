<div class="topnav">
	<form action="/dashboard">
    <input type="submit" value="Back to Dashboard">
	</form>
</div>

<% if (session[:teacher_id] != nil) %>

	<div class="mainbox">

		<h2>Students</h2>

		<hr>

		<% @students.each do |student| %>

			<form action="/students/<%= student.id %>">
		    <input type="submit" value="<%= student.first_name %> <%= student.last_name %>">
			</form>

		<% end %>

		<% if (session[:is_admin] == true) %>

			<form action="/students/new">
		    <input class="lite" type="submit" value="Add a New Student">
			</form>

		<% end %>

		<hr>

</div>

<% else %>

	<div class="sorry">
		<h1>Sorry, you are not authorized to view this page.</h1>
	</div>

<% end %>



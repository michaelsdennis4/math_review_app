<div class="topnav">
	<form action="/students/<%= @student.id %>">
    <input type="submit" value="Back to <%= @student.first_name %> <%= @student.last_name %>">
	</form>		
</div>

<% if((session[:is_admin]) || (session[:user_id] == @student.id)) %>

	<div class="mainbox">

		<h2>Edit Student Profile</h2>

		<hr>

		<h4>First Name: <%= @student.first_name %></h4>
		<h4>Last Name: <%= @student.last_name %></h4>
		<h4>Email: <%= @student.email %></h4> 
		<h4>Student ID: <%= @student.identification %></h4>
		<h4>Graduation Year: <%= @student.grad_year %></h4>
		<% if (@student.status == 0) %>	
			<h4>Status: Invited</h4>
		<% end %>

		<hr>

		<% if (session[:is_admin]) %>

			<form action="/students/<%= @student.id %>/edit">
		    <input type="submit" value="Edit Profile">
			</form>

		<% end %>

	</div>

<% else %>

	<div class="sorry">
		<h1>Sorry, you are not authorized to view this page.</h1>
	</div>

<% end %>
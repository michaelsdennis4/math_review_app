<div class="topnav">
	<form action="/test_questions/<%= @question.id %>">
    <input type="submit" value="Back to Question">
	</form>
</div>

<% if((session[:is_admin] == true) || (session[:teacher_id] == @question.review_session.teacher_id)) %>

	<div class="mainbox">

		<h2>Add a New Choice</h2>

		<hr>

		<div class="hostmath">
			<p>Use HostMath to format complex equations. Copy and paste formatted text into the field below. Once saved, the equation will then format on the screen. You can access the editor <a class="host" href="">here</a>.</p>
		</div>

		<form action="/test_questions/<%= @question.id %>/choices" method="post">
			<label for="choice_text">Choice Text</label><br>
			<textarea name="choice_text" placeholder="Enter Choice Text..."></textarea><br>
			<hr>
			<input type="submit" value="Create Choice"/>
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
		</form>

	</div>
	
<% else %>

	<div class="sorry">
		<h1>Sorry, you are not authorized to view this page.</h1>
	</div>

<% end %>
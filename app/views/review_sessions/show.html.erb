<div class="topnav">
	<form action="/courses/<%= @session.course.id %>">
    <input type="submit" value="Back to <%= @session.course.name %>">
	</form>
</div>

<div class="mainbox">

	<h2><%= @session.title %></h2>

	<h4>Created by: <%= @session.teacher.first_name %> <%= @session.teacher.last_name %></h4>
	<h4>Course: <%= @session.course.name %></h4>
	
	<br>

	<h3>Units</h3>

	<% @session.units.each do |unit| %>

		<form action="/units/<%= unit.id %>">
	    <input type="submit" value="<%= unit.title %>">
		</form>

	<% end %>

	<form action="/review_sessions/<%= @session.id %>/units/new">
    <input class="lite" type="submit" value="Add a Unit">
	</form>

	<br>

	<h3>Assessments</h3>

		<% @session.assessments.each do |assessment| %>

			<form action="/assessments/<%= assessment.id %>">
		    <input type="submit" value="<%= assessment.student.first_name %> <%= assessment.student.last_name %>">
			</form>
		
		<% end %>

		<form action="">
	    <input class="lite" type="submit" value="Add an Assessment">
		</form>

	<br>

	<h3>Test Questions</h3>

	<% if (@session.total_test_points) %>
		<h4>Total Test Points: <%= @session.total_test_points %></h4>
	<% end %>

	<% i = 1 %>

	<% @session.test_questions.each do |question| %>

		<form action="/test_questions/<%= question.id %>">
	    <input type="submit" value="Test Question <%= i %>">
		</form>

		<% i = i+1 %>

	<% end %>

	<form action="/review_sessions/<%= @session.id %>/test_questions/new">
    <input class="lite" type="submit" value="Add a Test Question">
	</form>

	<br>

	<form action="/review_sessions/<%= @session.id %>/edit">
    <input class="lite" type="submit" value="Edit Review Session">
	</form>	

</div>


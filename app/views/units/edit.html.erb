<a href="/units/<%= @unit.id %>">Back to <%= @unit.title %></a>

<% if (session[:is_teacher]) %>

	<h1>UNIT EDIT</h1>

	<form action="/units/<%= @unit.id %>" method="post">
		<label for="title">Unit Title</label>
		<input type="text" name="title" value="<%= @unit.title %>"/><br>
		<label for="description">Unit Description</label>
		<input type="text" name="description" value="<%= @unit.description %>"/><br>
		<input type="submit" value="Update Unit"/>
		<input type="hidden" name="_method" value="patch"/>
		<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
	</form>

	<form action="/units/<%= @unit.id %>" method="post">
		<input type="submit" value="Delete Unit"/>
		<input type="hidden" name="_method" value="delete"/>
		<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
	</form>

	
<% else %>

	<h1>Sorry, you are not authorized to view this page.</h1>

<% end %>
<a href="/review_sessions/<%= @unit.review_session.id %>">Back to <%= @unit.review_session.title %></a>

<h1>UNIT SHOW</h1>

<h3>Course: <%= @unit.review_session.course.name %></h3>
<h3>Created by: <%= @unit.review_session.teacher.first_name %> <%= @unit.review_session.teacher.last_name %></h3>
<h3>Review Session Title: <%= @unit.review_session.title %></h3>
<h3>Unit Title: <%= @unit.title %></h3>
<p>Description: <%= @unit.description %></p>

<a href="/units/<%= @unit.id %>/edit">Edit Unit</a>

<h4>Topics</h4>

<ul>
	<% @unit.topics.each do |topic| %>
	
		<li><a href="/topics/<%= topic.id %>"><%= topic.title %></a></li>

	<% end %>

</ul>

<a href="/units/<%= @unit.id %>/topics/new">Add a New Topic</a>



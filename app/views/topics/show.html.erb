<a href="/units/<%= @topic.unit.id %>">Back to <%= @topic.unit.title %></a>

<h1>TOPIC SHOW</h1>

<h3>Course: <%= @topic.unit.review_session.course.name %></h3>
<h3>Created by: <%= @topic.unit.review_session.teacher.first_name %> <%= @topic.unit.review_session.teacher.last_name %></h3>
<h3>Review Session Title: <%= @topic.unit.review_session.title %></h3>
<h3>Unit Title: <%= @topic.unit.title %></h3>
<h3>Topic Title: <%= @topic.title %></h3>
<h3>Video URL: <%= @topic.video_url %></h3>
<p>Description: <%= @topic.description %></p>

<a href="/topics/<%= @topic.id %>/edit">Edit Topic</a>


<h4>Review Questions</h4>

<ul>
	<% @topic.review_questions.each do |question| %>
	
		<li><a href="/review_questions/<%= question.id %>"><%= question.id %></a></li>

	<% end %>

</ul>

<a href="/topics/<%= @topic.id %>/review_questions/new">Add a New Question</a>

